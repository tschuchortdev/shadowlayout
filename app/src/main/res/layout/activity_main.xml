<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tschuchort.shadowlayoutexample.MainActivity">

    <com.tschuchort.shadowlayout.widget.ShadowLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:elevation="2dp"
        app:drawOutsideBounds="false"
        app:useNativeElevation="false"
        app:liftOnTouch="2dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shadow_test"/>

    </com.tschuchort.shadowlayout.widget.ShadowLayout>

    <com.tschuchort.shadowlayout.widget.ShadowLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        app:drawOutsideBounds="true"
        app:useNativeElevation="false"
        app:liftOnTouch="4dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shadow_test"/>

    </com.tschuchort.shadowlayout.widget.ShadowLayout>


    <com.tschuchort.shadowlayout.widget.ShadowLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:elevation="2dp"
        app:drawOutsideBounds="false"
        app:useNativeElevation="false"
        app:liftOnTouch="6dp">

        <Button
            android:background="@android:color/darker_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stateListAnimator="@null"
            android:text="text"/>

    </com.tschuchort.shadowlayout.widget.ShadowLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stateListAnimator="@null"
        android:text="text"/>

</LinearLayout>
