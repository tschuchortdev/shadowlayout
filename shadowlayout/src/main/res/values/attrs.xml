<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MaterialShadowLayout">
        <attr name="elevation" format="dimension"/>
        <attr name="liftOnTouch" format="dimension"/>
        <attr name="useNativeElevation" format="boolean"/> <!-- default false -->
    </declare-styleable>

    <declare-styleable name="ArbitraryShapeShadowLayout">
        <attr name="changesShape" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="CssShadowLayout">
        <attr name="offsetX" format="dimension"/>
        <attr name="offsetY" format="dimension"/>
        <attr name="blur" format="dimension" />
        <attr name="spread" format="dimension" />
        <attr name="color" format="color" />
    </declare-styleable>
</resources>